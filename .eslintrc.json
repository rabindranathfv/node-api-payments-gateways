{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "class-methods-use-this": "off",
        "arrow-body-style": "off",
        "comma-dangle": "off",
        "indent": [
            2,
            2
        ],
        "max-len": [
            2,
            200
        ]
    },
    "overrides": [
        {
          "files": ["*-test.js","*.spec.js"],
          "rules": {
            "global-require": "off"
          }
        }
    ]
}
